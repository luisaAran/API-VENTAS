# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL root password (usado por Docker)
DB_ROOT_PASSWORD=secret

# Database connection
DB_HOST=mysql
DB_PORT=3307
DB_USER=ventas_user
DB_PASSWORD=ventas_password
DB_NAME=ventas_db

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# APPLICATION CONFIGURATION
# ========================================
PORT=3000
APP_URL=http://localhost:3000
NODE_ENV=development

# ========================================
# JWT & SECURITY
# ========================================
JWT_SECRET=change_this_secret_in_production
JWT_EXPIRES_IN=1h

# ========================================
# TOKEN EXPIRATION SETTINGS
# ========================================
# Refresh token expiry (in days)
REFRESH_TOKEN_EXPIRES_DAYS=7

# Login code expiry (in minutes)
LOGIN_CODE_EXPIRY_MINUTES=10

# Email verification token expiry (in hours)
EMAIL_VERIFICATION_EXPIRY_HOURS=24

# Trusted device token expiry (in days)
# Allows users to skip 2FA on trusted devices
TRUSTED_DEVICE_EXPIRES_DAYS=30

# Order verification token expiry (in minutes)
# Time limit to verify payment after creating an order
ORDER_VERIFICATION_EXPIRY_MINUTES=5

# Trusted payment token expiry (in days)
# Allows users to skip payment verification on trusted devices
TRUSTED_PAYMENT_EXPIRES_DAYS=30

# ========================================
# SMTP CONFIGURATION (Email sending)
# ========================================
# For Gmail: smtp.gmail.com
# For Outlook: smtp-mail.outlook.com
# For SendGrid: smtp.sendgrid.net
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Email credentials
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# From email address
SMTP_FROM="Ventas <no-reply@example.com>"
